	<action-group>
		<open src="posting.php">
			<edit>
				<find><![CDATA[if ($auth->acl_get('f_topic_desc', $forum_id))
	{
		$post_data['topic_desc']		= utf8_normalize_nfc(request_var('desc', '', true));
	}]]></find>
				<action type="replace-with"><![CDATA[$post_data['topic_desc']		= ($auth->acl_get('f_topic_desc', $forum_id)) ? utf8_normalize_nfc(request_var('desc', '', true)) : $post_data['topic_desc'];]]></action>
			</edit>
			<edit>
				<find><![CDATA['topic_desc'			=> (!empty($post_data['topic_desc'])) ? $post_data['topic_desc'] : '',]]></find>
				<action type="replace-with"><![CDATA['topic_desc'			=> $post_data['topic_desc'],]]></action>
			</edit>
		</open>
		<open src="includes/functions_posting.php">
			<edit>
				<find><![CDATA['topic_desc'				=> (!empty($data['topic_desc'])) ? $data['topic_desc'] : '',]]></find>
				<action type="replace-with"><![CDATA['topic_desc'				=> $data['topic_desc'],]]></action>
			</edit>
			<edit>
				<find><![CDATA['topic_desc'				=> (!empty($data['topic_desc'])) ? $data['topic_desc'] : '',]]></find>
				<action type="replace-with"><![CDATA['topic_desc'				=> $data['topic_desc'],]]></action>
			</edit>
		</open>
	</action-group>
</mod>